<!DOCTYPE html>
<html lang="en">

<!-- GENERATED FROM game.html.jinja -->

<head>
    <title>ERS-OL</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/main.css" rel="stylesheet">
</head>

<body onload="init()">
    <h1>ERS-OL</h1>
    <canvas id="mainCanvas" width="500" height="500" style="border:1px solid black;"></canvas>
    <table id="hostSettingsTable">
        <tbody id="youAreTheHost" style="display: none;">
            <tr>
                <td colspan="4">
                    <p><b>You are the host</b></p>
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <button onclick="startGame()" id="startGameButton" disabled>Start Game</button>
                </td>
            </tr>
        </tbody>
        <tr>
            <td>
                <p>Doubles<input id="slapDoubles" class="hostSetting" type="checkbox" checked disabled></p>
            </td>
            <td>
                <p>Sandwiches<input id="slapSandwiches" class="hostSetting" type="checkbox" checked disabled></p>
            </td>
            <td>
                <p>10-Sandwiches<input id="slapTenSandwiches" class="hostSetting" type="checkbox" disabled></p>
            </td>
            <td>
                <p>Top-Bottom<input id="slapTopBottom" class="hostSetting" type="checkbox" checked disabled></p>
            </td>
        </tr>
        <tr>
            <td>
                <p>Adds to 10<input id="slapAddToTen" class="hostSetting" type="checkbox" checked disabled></p>
            </td>
            <td>
                <p>"10" ends face card round<input id="tenEndsFaceCardRound" class="hostSetting" type="checkbox"
                        disabled></p>
            </td>
            <td>
                <p>Marriage<input id="slapMarriage" class="hostSetting" type="checkbox" checked disabled></p>
            </td>
            <td>
                <p>Divorce<input id="slapDivorce" class="hostSetting" type="checkbox" disabled></p>
            </td>
        </tr>
        <tr>
            <td>
                <p>3 Ascending/Descending<input id="slapThreeAscDesc" class="hostSetting" type="checkbox" disabled></p>
            </td>
            <td>
                <p>4 Ascending/Descending<input id="slapFourAscDesc" class="hostSetting" type="checkbox" checked
                        disabled></p>
            </td>
            <td>
                <p>Slap all 10s<input id="slapTens" class="hostSetting" type="checkbox" disabled></p>
            </td>
            <td>
                <p>Slap all 7s<input id="slapSevens" class="hostSetting" type="checkbox" disabled></p>
            </td>
        </tr>
    </table>
    <footer id="copyright">&copy; 2021 NitroGuy</footer>

    <div id="cardImages" hidden>
        {% for image in image_list %}
        <img src="/{{ image }}" id="{{ image }}">
        {% endfor %}
    </div>
    <img src="/sprites/arrow.png" id="promptArrow">

    <script src="/scripts/socket.io/socket.io.js"></script>
    <script src="/scripts/howler.js/howler.core.min.js"></script>
    <script src="/scripts/components.js"></script>
    <script src="/scripts/game.js"></script>
    <script src="/scripts/sockets.js"></script>
</body>

</html>