<!DOCTYPE html>
<html lang="en">

<!-- GENERATED FROM game.html.jinja -->

<head>
    <title>ERS-OL</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            text-align: center;
            font-family: Arial, Helvetica, sans-serif;
            color: #eee;
            background-color: #333;
        }

        p {
            font-size: 20px;
        }

        h1 {
            font-size: 50px;
        }

        img, audio {
            visibility: hidden;
        }
    </style>
</head>

<body onload="init()">
    <h1>ERS-OL</h1>
    <p>Hello, player!</p>
    <canvas id="mainCanvas" width="500" height="500" style="border:1px solid black;"></canvas>
    <footer id="copyright">&copy; 2021 NitroGuy</footer>

    <div id="cardImages" hidden>
        {% for image in image_list %}
        <img src="{{ image }}" id="{{ image }}">
        {% endfor %}
    </div>

    <div id="audio" hidden>
        <audio src="sfx/burn.wav" id="audioBurn" preload="auto"></audio>
        <audio src="sfx/deal.wav" id="audioDeal" preload="auto"></audio>
        <audio src="sfx/deal_many.wav" id="audioDealMany" preload="auto"></audio>
        <audio src="sfx/slap.wav" id="audioSlap" preload="auto"></audio>
    </div>

    <script src="scripts/game.js"></script> 
</body>

</html>